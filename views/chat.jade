doctype html
include ../public/navbar.html
html(lang='en')
  head
    meta(charset='UTF-8')
    title ConcertBuddies
    link(rel='stylesheet', href='css/main.css')
    link(rel='stylesheet', href='css/chat.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    // jQuery
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='javascript/chat.js')
  body
    .page-content
      #contact-panel
        #no-matches-contact You have no matches!
      #chat-panel
        #chat-log-holder
        #chat-input-bar
          textarea(type="text" placeholder="Send a message")#chat-input
          #chat-send-btn.fa.fa-envelope.fa-2x
      #info-panel
        #active_pic
          #active-profile-img-overlay
            .img-nav#img-left-nav
              i.fa.fa-angle-left.fa-2x
            .img-nav#img-right-nav
              i.fa.fa-angle-right.fa-2x
        div
          #active_name
          | , 
          #active_age
        #active_about
        | <br /><strong>Event(s) Matched:<br /></strong> 
        #active_events
        button.remove_friend Remove User
